<h3>Register</h3>
<form method="post">
    <div class="form-group">
        <label for ="username"class="form-label">UserName:</label>
        <input asp-for="@Model.UserName"id="username" class="form-control mb-2" type="text" placeholder="username" />
        <span class=text-warning asp-validation-for="@Model.UserName"></span>

        <label for ="email"class="form-label">Email Adress:</label>
        <input asp-for="@Model.Email"id="email" class="form-control mb-2" type="email" placeholder="email" />
        <span class=text-warning asp-validation-for="@Model.Email"></span>

        <label for ="password"class="form-label">Password:</label>
        <input asp-for="@Model.Password"id="password" class="form-control mb-2" type="password" placeholder="password" />
        <span class=text-warning asp-validation-for="@Model.Password"></span>

        <label for ="vertify-password"class="form-label">Vertify Password:</label>
        <input asp-for="@Model.VertifyPassword" id="password" class="form-control mb-4" type="password" placeholder=" vertify password" />
        <span class=text-warning asp-validation-for="@Model.VertifyPassword"></span>

         <input class="btn btn-outline-danger" type="submit" value="Sign Up!" />
    </div>

